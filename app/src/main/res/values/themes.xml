<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OPUS" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.OPUS" parent="Base.Theme.OPUS" />

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">13.4dp</item>
        <item name="android:maxHeight">13.4dp</item>
    </style>

    <style name="TextStyleMedium" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font16</item>
        <item name="android:textColor">@color/texcolorHeading</item>
        <item name="fontFamily">@font/outfit_semibold</item>
    </style>

    <style name="TextStyleMedium14" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font14</item>
        <item name="android:textColor">@color/texcolorHeading</item>
        <item name="fontFamily">@font/outfit_medium</item>
    </style>

    <style name="TextStyleHint" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font14</item>
        <item name="android:textColor">@color/texcolorHeading</item>
        <item name="android:hint">@color/text2</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>


    <style name="TextStyleSmall" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font12</item>
        <item name="android:textColor">@color/text2</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>

    <style name="TextStyleBig20" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font20</item>
        <item name="android:textColor">@color/texcolorHeading</item>
        <item name="fontFamily">@font/outfit_bold</item>
    </style>

</resources>